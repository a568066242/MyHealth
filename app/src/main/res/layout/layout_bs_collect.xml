<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_base_collect"
        android:layout_below="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_base"/>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@+id/layout_base"
    >
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/bloodsugar"
    android:textSize="25sp"
    android:padding="10dp"
    android:id="@+id/tv_dbp"
    android:textColor="@color/black"
        android:layout_marginLeft="30dp"
    />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@drawable/biankuang_gray"
            android:gravity="center"
            android:id="@+id/tv_bs_value"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_dbp"
            android:layout_toEndOf="@+id/tv_dbp"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp" />

    </RelativeLayout>

</RelativeLayout>